## 1. BLOQUEAR ACCESO A ARCHIVOS SENSIBLES
<FilesMatch "(\.(bak|config|sql|lib|log)|core)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# 2. BLOQUEO DE BOTS Y SCANNERS CONOCIDOS
SetEnvIfNoCase User-Agent "Googlebot" bad_bot
SetEnvIfNoCase User-Agent "Googlebot-Image" bad_bot
SetEnvIfNoCase User-Agent "Mediapartners-Google" bad_bot
SetEnvIfNoCase User-Agent "AdsBot-Google" bad_bot
SetEnvIfNoCase User-Agent "Lighthouse" bad_bot
SetEnvIfNoCase User-Agent "SafeBrowsing" bad_bot

<Limit GET POST>
    Order Allow,Deny
    Allow from all
    Deny from env=bad_bot
</Limit>

# 3. FILTRO POR USER AGENT ADICIONAL
RewriteEngine On
RewriteCond % {HTTP_USER_AGENT} (google|bot|crawler|spider|slurp|search|lighthouse|headless) [NC]
RewriteRule .* - [F,L]

# 4. EVITAR QUE LISTE EL DIRECTORIO
Options -Indexes

# 5. BLOQUEO DE IPS DE SEGURIDAD (EJEMPLOS)
# Google Inc
Allow from all
